
<% if user_signed_in? %>

<div class="d-flex justify-content-center pb-3 pt-2">
 <%= link_to 'CREATE ALBUM', new_album_path, :class => 'btn btn-md btn-outline-secondary' %>
</div>
<% end %>
<div  class="mx-5">
<h1>Albums</h1>
</div>
<div class="row">
  
  <% albums.each do |album| %>
  
    
        <% if user_signed_in?%>
                
                <% if album.user == current_user %>
                  <div class="col-md-4 my-3 d-flex justify-content-center">
                      <div class="card" style="width: 18rem;">
                            <img src="https://source.unsplash.com/1600x900/?<%=album.title%>" class="card-img-top" alt="...">
                            <div class="card-body">
                                  <h5 class="card-title text-uppercase"><%= album.title%></h5>
                                  <p class="card-text text-capitalize"><%= album.description %></p>
                                  <p class="card-text text-capitalize"><strong>TAGS:-</strong><%= album.all_tags %></p>
                                   
                                  <p class="card-text text-capitalize"><%= album.published%></p> 
                                  
                                  <div class="btn-group">
                                    <td><%= link_to 'Show', album, class: "btn btn-secondary" %></td>
                                      <td><%= link_to 'Edit', edit_album_path(album),class: "btn btn-secondary" %></td>
                                      <td><%= link_to 'Destroy', album,class: "btn btn-secondary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                  </div> 
                            </div>
                        </div>
           </div> 
                <% end %>
                   
            <%# <% end %>  





          <% else %>
          
          <% if album.published? %>
          <div class="col-md-4 my-3">
              <div class="card mb-4" style="width: 18rem;">
                <img src="https://source.unsplash.com/1600x900/?<%=album.title%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title text-uppercase"><%= album.title%></h5>
                  <p class="card-text text-capitalize"><%= album.description %></p>
                  <p class="card-text text-capitalize"><strong>TAGS:-</strong><%= album.all_tags %></p>
                  <% if user_signed_in? %> 
                  <p class="card-text text-capitalize"><%= album.published%></p> 
                  <% end %>
                  <div class="btn-group">
                    <td><%= link_to 'Show', album, class: "btn btn-secondary" %></td>
                 
                  </div>
                </div>
              </div>
           
             </div>
         <% end %> 
         <% end %> 
         
        <% end %>   
           
             </div>
             </div>   
    
      
  
  

    



