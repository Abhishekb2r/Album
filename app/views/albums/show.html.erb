<p>
  <strong>Title:</strong>
  <%= @album.title%>
</p>
<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<p>
  <strong>Published:</strong>
  <%= @album.published %>
</p>
<div class="d-flex justify-content-start pb-3">
 <% @album.images.each do |image| %>
    <%= image_tag(image, style:"width:20%") %>
    <%if user_signed_in?%>
     <%= link_to 'Remove', delete_image_attachment_album_url(image.signed_id), class: "btn btn-light btn-sm",
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
                <% end %>
<% end %>
</div>
<% if user_signed_in?%>
<%= link_to 'Edit', edit_album_path(@album), class: "btn btn-dark btn-sm"%> 
<% end%>
<%= link_to 'Back', albums_path, class: "btn btn-secondary btn-sm" %>
